<%= form_with(model: product, class: "flex flex-col space-y-2") do |form| %>
    <div class="">
        <%= form.label :name, "Product Name", class: "block" %>
        <%= form.text_field :name, class: "w-full border border-primary text-base rounded-md p-2" %>
    </div>
    <div class="">
        <%= form.label :description, "Product Description", class: "block" %>
        <%= form.text_area :description, class: "w-full border border-primary text-base rounded-md p-2" %>
    </div>
    <div class="">
        <%= form.label :stock, "Product Quantity", class: "block" %>
        <%= form.number_field :stock, class: "w-full border border-primary text-base rounded-md p-2" %>
    </div>
    <div class="">
        <%= form.label :price, "Product Price", class: "block" %>
        <%= form.number_field :price, class: "w-full border border-primary text-base rounded-md p-2" %>
    </div>
    <div class="">
        <%= form.label :category_id, "Select Category", class: "block" %>
        <%= form.select :category_id, options_for_select(@categories.map {|c| [c.name, c.id]}, selected: product.category_id), class: "w-full border border-primary text-base rounded-md p-2" %>
    </div>
    <div class="">
        <%= form.label :images, "Product Images", class: "block" %>
        <%= form.file_field :images, multiple: true, direct_upload: true, class: "w-full border border-primary text-base rounded-md p-2" %>
    </div>
    <div class="">
        <%= form.submit "Save", class: "text-sm bg-primary text-white rounded-md p-2" %>
    </div>
<% end %>
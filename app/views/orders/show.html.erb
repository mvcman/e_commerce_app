<div class="w-full h-full flex flex-col">
    <div class="w-full h-12 flex items-center justify-between p-4 border-b border-primary font-medium space-x-2">
        <div class=""><%= breadcrumbs %></div>
    </div>
    <div class="h-full w-full overflow-y-auto p-4 flex flex-col">
        <h1 class="font-medium">Order Confirmation</h1>
        <p>Order ID: <span class="font-medium"><%= @order.id %></span></p>
        <p>Order Date: <span class="font-medium"><%= @order.created_at %></span></p>

        <div class="grid grid-cols-5 font-bold border border-primary">
            <div class="p-2 border-b border-primary">Id</div>
            <div class="p-2 border-b border-primary">Product</div>
            <div class="p-2 border-b border-primary">Quantity</div>
            <div class="p-2 border-b border-primary">Price</div>
            <div class="p-2 border-b border-primary">Subtotal</div>
        </div>
        <div class="grid grid-cols-5 border border-primary">
            <% @order.order_items.each_with_index do |order_item, i|%>
                <div class="p-2 border-b border-primary"><%= i+1 %></div>
                <div class="p-2 border-b border-primary"><%= order_item.product.name %></div>
                <div class="p-2 border-b border-primary"><%= order_item.quantity %></div>
                <div class="p-2 border-b border-primary"><%= order_item.price %></div>
                <div class="p-2 border-b border-primary"><%= order_item.total_price %></div>
            <% end %>
        </div>
        <div class="grid grid-cols-5 border border-primary p-4">
            <a href="<%= orders_path %>" class="text-blue-500 col-span-3">View Order History</a>
            <h2 class="font-medium">Total Price:</h2>
            <h2 class="font-bold">Rs. <%= @order.total_price %></h2>
        </div>
    </div>
</div>
<div class="w-full h-full flex flex-col">
    <div class="w-full h-12 flex items-center justify-between p-4 border-b border-primary font-medium space-x-2">
        <div class=""><%= breadcrumbs %></div>
    </div>
    <div class="h-full w-full overflow-y-auto p-4 flex flex-col">
        <h2 class="font-bold">My orders </h2>
        <h1 class="font-medium">Your Order History</h1>

        <div class="grid grid-cols-6 font-bold border border-primary">
            <div class="p-2 border-b border-primary">Id</div>
            <div class="p-2 border-b border-primary">Order Id</div>
            <div class="p-2 border-b border-primary">Order Date</div>
            <div class="p-2 border-b border-primary">Status</div>
            <div class="p-2 border-b border-primary">Total Price</div>
            <div class="p-2 border-b border-primary">Action</div>
        </div>
        <div class="grid grid-cols-6 border border-primary">
            <% @orders.each_with_index do |order, i|%>
                <div class="p-2 border-b border-primary"><%= i+1 %></div>
                <div class="p-2 border-b border-primary"><%= order.id %></div>
                <div class="p-2 border-b border-primary"><%= order.created_at.strftime("%A %Y") %></div>
                <div class="p-2 border-b border-primary"><%= order.status %></div>
                <div class="p-2 border-b border-primary"><%= order.total_price %></div>
                <div class="p-2 border-b border-primary"><a href="<%= order_path(order) %>">View Details</a></div>
            <% end %>
        </div>
    </div>
</div>